extends layout

block head
    link(rel='stylesheet', type='text/css', href='/stylesheets/style-market.css')

block content
    h2#title #{title}
    hr.divisoria
    // CAROUSEL
    div.carousel.slide(id='myCarousel' data-ride='carousel' data-interval='8000')
        // Indicators
        ol.carousel-indicators
            li.active(data-target='#myCarousel' data-slide-to='0')
            li(data-target='#myCarousel' data-slide-to='1')
            li(data-target='#myCarousel' data-slide-to='2')
            li(data-target='#myCarousel' data-slide-to='3')
        // Wrapper for slides
        div.carousel-inner(role='listbox')
            div.item.active
                h5#carousel-title1.center-text Repsol S.A.
            div.item
                h5#carousel-title2.center-text OHL S.A.
            div.item
                h5#carousel-title3.center-text Telefonica S.A.
            div.item
                h5#carousel-title4.center-text Bankia S.A.
        // Left-Right controls
        a.left.carousel-control(href='#myCarousel' role='button' data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#myCarousel' role='button' data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only Next
    hr.divisoria